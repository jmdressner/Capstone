@model IEnumerable<Capstone.Models.EventViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
    .headerColor {
        background-color: darkgreen;
        color: white;
    }
</style>

<div style="background-color: khaki">
    <br />
    <center><h2><strong>My Event Attendance</strong></h2></center>
    <br />
</div>

<h4>
    <strong>
        @Html.ActionLink("Sign Up", "Create")
    </strong>
</h4>
<table class="table">
    <tr class="headerColor">
        <th>
            @if (User.IsInRole("Admin"))
            {
                @Html.DisplayNameFor(model => model.Admin.Name)
            }
        </th>
        <th>
            @if (User.IsInRole("Volunteer"))
            {
                @Html.DisplayNameFor(model => model.Volunteer.Name)
            }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event.Occasion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventResponse.Response)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.DisplayFor(modelItem => item.Admin.Name)
                }
            </td>
            <td>
                @if (User.IsInRole("Volunteer"))
                {
                    @Html.DisplayFor(modelItem => item.Volunteer.Name)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Occasion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventResponse.Response)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<p>
    <strong>
        @Html.ActionLink("Back to Events", "Index", "Events")
    </strong>
</p>

