@model IEnumerable<Capstone.Models.Volunteer>

@{
    ViewBag.Title = "Index";
}

<div style="background-color: khaki">
    <br />
    <center><h2><strong>All Volunteers</strong></h2></center>
    <br />
</div>
<br />

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })
        </th>
        <th>
            @Html.ActionLink("Phone", "Index", new { sortOrder = ViewBag.PhoneSortParm })
        </th>
        <th>
            @Html.ActionLink("Address", "Index", new { sortOrder = ViewBag.AddressSortParm })
        </th>
        <th>
            @Html.ActionLink("Zipcode", "Index", new { sortOrder = ViewBag.ZipcodeSortParm })
        </th>
        <th>
            @Html.ActionLink("Church", "Index", new { sortOrder = ViewBag.ChurchSortParm })
        </th>
        <th>
            @Html.ActionLink("Background Check", "Index", new { sortOrder = ViewBag.BackgroundCheckSortParm })
        </th>
